<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="x_pos" default="0.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.3"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/empty.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

  <!-- Include additional URDF file -->
  <arg name="arena" default="$(env TURTLEBOT3_MODEL)" doc="arena"/>
  <arg name="additional_x_pos" default="1.0"/>
  <arg name="additional_y_pos" default="0.0"/>
  <arg name="additional_z_pos" default="0.0"/>

  <param name="additional_robot_description" command="$(find xacro)/xacro --inorder $(arg additional_urdf)" />

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_additional_urdf" args="-urdf -model $(arg additional_model) -x $(arg additional_x_pos) -y $(arg additional_y_pos) -z $(arg additional_z_pos) -param additional_robot_description" />
</launch>

